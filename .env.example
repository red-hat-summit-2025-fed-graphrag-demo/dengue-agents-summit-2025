# Summit Agents - Environment Configuration
# Copy this file to .env and customize as needed

#
# API Keys - Granite Models
#
# These can also be mounted as OpenShift secrets
GRANITE_EMBEDDING_API_KEY=your_granite_embedding_key_here
GRANITE_GUARDIAN_API_KEY=your_granite_guardian_key_here
GRANITE_INSTRUCT_API_KEY=your_granite_instruct_key_here

#
# API Keys - Other Providers
#
SAFETY_CHECKER_API_KEY=your_safety_checker_key_here
MIXTRAL_API_KEY=your_mixtral_key_here
DOCLING_API_KEY=your_docling_key_here
OPENAI_KEY=your_openai_key_here

#
# Database Configuration
#
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

#
# Vector Database
#
WEAVIATE_URL=http://localhost:8080
WEAVIATE_CLASS=DengueDoc

#
# Services & API Endpoints
#
EMBEDDING_SERVICE_URL=http://localhost:8000
PORT=8000  # Backend API port
UI_PORT=3000  # Frontend UI port

#
# Model Configuration
#
PREFERRED_MODEL_PROVIDER=granite  # Options: granite, openai, mixtral

#
# Security & Access
#
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
DEBUG=false
ENABLE_STREAMING=true
